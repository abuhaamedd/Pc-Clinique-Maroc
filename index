    <script>
        // --- DATA STRUCTURE ---
        const defaultSettings = {
            name: "Pc-Clinique",
            address: "Tanja Lbalia, 19, Rue Plage Abou Labbass",
            city: "90000 Tanger",
            phone: "0539300109/0641989484/0695944448",
            email: "abuhaamedd@gmail.com",
            */siret: "123 456 789 00000",*/
            tax: 20,
            currency: "Dhs"
        };

        let state = {
            settings: JSON.parse(JSON.stringify(defaultSettings)),
            products: [],
            cart: [],
            sales: []
        };

        // --- INIT & STORAGE ---
        function init() {
            const savedData = localStorage.getItem('modushop_pro_data');
            if (savedData) {
                const parsed = JSON.parse(savedData);
                state = { ...state, ...parsed };
                state.cart = []; // Always start with empty cart
            } else {
                seedDemoData();
            }
            updateUI();
        }

        function saveData() {
            localStorage.setItem('modushop_pro_data', JSON.stringify(state));
            updateUI();
        }

        function seedDemoData() {
            state.products = [
                { id: 1, name: "Produit Exemple A", category: "G√©n√©ral", price: 10.00, stock: 50, img: "" },
                { id: 2, name: "Produit Exemple B", category: "G√©n√©ral", price: 25.50, stock: 20, img: "" }
            ];
            saveData();
        }

        // --- NAVIGATION ---
        function switchView(viewId) {
            document.querySelectorAll('.view-section').forEach(el => el.classList.remove('active'));
            document.getElementById('view-' + viewId).classList.add('active');
            
            document.querySelectorAll('.nav-item').forEach(el => el.classList.remove('active'));
            event.currentTarget.classList.add('active');

            if(viewId === 'settings') loadSettingsForm();
            if(viewId === 'inventory') renderInventory();
            if(viewId === 'history') renderHistory();
            if(viewId === 'pos') renderPOS();
        }

        function updateUI() {
            document.title = state.settings.name + " - ModuShop";
            document.querySelector('.brand').innerHTML = "‚ö° " + state.settings.name;
            renderPOS();
            renderInventory(); 
        }

        // --- SETTINGS ---
       
/* function saveSettings(e) {
            e.preventDefault();
            state.settings.name = document.getElementById('set-name').value;
            state.settings.address = document.getElementById('set-address').value;
            state.settings.city = document.getElementById('set-city').value;
            state.settings.phone = document.getElementById('set-phone').value;
            state.settings.email = document.getElementById('set-email').value;
            state.settings.siret = document.getElementById('set-siret').value;
            state.settings.tax = parseFloat(document.getElementById('set-tax').value);
            state.settings.currency = document.getElementById('set-currency').value;
            saveData();
            alert("Param√®tres sauvegard√©s !");
        } 
*/

        function loadSettingsForm() {
            document.getElementById('set-name').value = state.settings.name;
            document.getElementById('set-address').value = state.settings.address;
            document.getElementById('set-city').value = state.settings.city;
            document.getElementById('set-phone').value = state.settings.phone;
            document.getElementById('set-email').value = state.settings.email;
            document.getElementById('set-siret').value = state.settings.siret;
            document.getElementById('set-tax').value = state.settings.tax;
            document.getElementById('set-currency').value = state.settings.currency;
        }

        // --- POS LOGIC ---
        function getTTCPrice(priceHt) {
            return priceHt * (1 + (state.settings.tax / 100));
        }

        function renderPOS() {
            const grid = document.getElementById('pos-grid');
            grid.innerHTML = state.products.map(p => {
                const priceTTC = getTTCPrice(p.price).toFixed(2);
                return `
                <div class="product-card" onclick="addToCart(${p.id})" style="${p.stock <= 0 ? 'opacity:0.5; pointer-events:none;' : ''}">
                    <div class="product-img">
                        ${p.img ? `<img src="${p.img}">` : 'üì∑'}
                    </div>
                    <div class="product-info">
                        <div style="font-weight:600">${p.name}</div>
                        <div style="font-size:0.8rem; color:#666">${p.category}</div>
                        <div class="product-price">${priceTTC} ${state.settings.currency}</div>
                    </div>
                </div>`;
            }).join('');
        }

        function addToCart(id) {
            const product = state.products.find(p => p.id === id);
            if (!product || product.stock <= 0) return;

            const existing = state.cart.find(i => i.id === id);
            if (existing) {
                if(existing.qty < product.stock) existing.qty++;
            } else {
                state.cart.push({ id: id, name: product.name, priceHt: product.price, priceTTC: getTTCPrice(product.price), qty: 1 });
            }
            renderCart();
        }

        function renderCart() {
            const list = document.getElementById('cart-list');
            const totalEl = document.getElementById('cart-total');
            const btn = document.getElementById('btn-checkout');

            if (state.cart.length === 0) {
                list.innerHTML = '<div style="padding:20px; text-align:center; color:#999">Panier vide</div>';
                totalEl.innerText = `0.00 ${state.settings.currency}`;
                btn.disabled = true;
                return;
            }

            let total = 0;
            list.innerHTML = state.cart.map(item => {
                total += item.priceTTC * item.qty;
                return `
                <div class="cart-item">
                    <div>
                        <div style="font-weight:600">${item.name}</div>
                        <div style="font-size:0.85rem; color:#666">${item.priceTTC.toFixed(2)} ${state.settings.currency} x ${item.qty}</div>
                    </div>
                    <div style="display:flex; gap:5px; align-items:center;">
                        <button class="qty-btn" onclick="updateQty(${item.id}, -1)">-</button>
                        <span>${item.qty}</span>
                        <button class="qty-btn" onclick="updateQty(${item.id}, 1)">+</button>
                    </div>
                </div>`;
            }).join('');

            totalEl.innerText = `${total.toFixed(2)} ${state.settings.currency}`;
            btn.disabled = false;
        }

        function updateQty(id, change) {
            const item = state.cart.find(i => i.id === id);
            const product = state.products.find(p => p.id === id);
            if (!item) return;

            const newQty = item.qty + change;
            if (newQty <= 0) {
                state.cart = state.cart.filter(i => i.id !== id);
            } else if (newQty > product.stock) {
                alert("Stock insuffisant");
                return;
            } else {
                item.qty = newQty;
            }
            renderCart();
        }

        // --- CHECKOUT & CLIENT ---
        function openClientModal() {
            if (state.cart.length === 0) return;
            document.getElementById('client-name').value = ""; 
            document.getElementById('client-address').value = "";
            document.getElementById('client-modal').classList.add('open');
            setTimeout(() => document.getElementById('client-name').focus(), 100);
        }

        function processCheckout() {
            const clientName = document.getElementById('client-name').value.trim();
            if (!clientName) {
                alert("Veuillez entrer le nom du client.");
                return;
            }
            const clientAddress = document.getElementById('client-address').value.trim();

            state.cart.forEach(cItem => {
                const product = state.products.find(p => p.id === cItem.id);
                if (product) product.stock -= cItem.qty;
            });

            const sale = {
                id: Date.now(),
                date: new Date().toLocaleString('fr-FR'),
                items: [...state.cart],
                total: parseFloat(document.getElementById('cart-total').innerText),
                client: { name: clientName, address: clientAddress || "Non sp√©cifi√©" }
            };
            state.sales.unshift(sale);

            state.cart = [];
            closeModal('client-modal');
            renderCart();
            renderPOS();
            saveData();
            
            viewInvoice(sale.id);
        }

        // --- INVENTORY ---
        function renderInventory() {
            const list = document.getElementById('inventory-list');
            const datalist = document.getElementById('cat-list');
            const cats = [...new Set(state.products.map(p => p.category))];
            datalist.innerHTML = cats.map(c => `<option value="${c}">`).join('');

            list.innerHTML = state.products.map(p => `
                <tr>
                    <td>${p.name}</td>
                    <td>${p.category}</td>
                    <td>${p.price.toFixed(2)} ${state.settings.currency}</td>
                    <td style="font-weight:bold">${getTTCPrice(p.price).toFixed(2)} ${state.settings.currency}</td>
                    <td>${p.stock}</td>
                    <td>
                        <button class="btn-sm btn-edit" onclick="editProduct(${p.id})">‚úèÔ∏è</button>
                        <button class="btn-sm btn-delete" onclick="deleteProduct(${p.id})">üóëÔ∏è</button>
                    </td>
                </tr>
            `).join('');
        }

        function openProductModal(prod = null) {
            const modal = document.getElementById('product-modal');
            const form = document.getElementById('product-form');
            form.reset();
            
            if (prod) {
                document.getElementById('prod-id').value = prod.id;
                document.getElementById('prod-name').value = prod.name;
                document.getElementById('prod-cat').value = prod.category;
                document.getElementById('prod-price').value = prod.price;
                document.getElementById('prod-stock').value = prod.stock;
                document.getElementById('prod-img').value = prod.img || '';
            } else {
                document.getElementById('prod-id').value = '';
            }
            modal.classList.add('open');
        }

        function saveProduct(e) {
            e.preventDefault();
            const idVal = document.getElementById('prod-id').value;
            const prod = {
                id: idVal ? parseInt(idVal) : Date.now(),
                name: document.getElementById('prod-name').value,
                category: document.getElementById('prod-cat').value,
                price: parseFloat(document.getElementById('prod-price').value),
                stock: parseInt(document.getElementById('prod-stock').value),
                img: document.getElementById('prod-img').value
            };

            if (idVal) {
                const idx = state.products.findIndex(p => p.id == idVal);
                state.products[idx] = prod;
            } else {
                state.products.push(prod);
            }
            closeModal('product-modal');
            saveData();
        }

        function editProduct(id) { openProductModal(state.products.find(p => p.id === id)); }
        function deleteProduct(id) {
            if(confirm("Supprimer ce produit ?")) {
                state.products = state.products.filter(p => p.id !== id);
                saveData();
            }
        }
        // --- CSV IMPORT LOGIC (ROBUSTE) ---

        function openImportModal() {
            document.getElementById('csv-file-input').value = ""; 
            document.getElementById('import-modal').classList.add('open');
        }

        function processCSV() {
            const fileInput = document.getElementById('csv-file-input');
            const file = fileInput.files[0];

            if (!file) {
                alert("Veuillez s√©lectionner un fichier.");
                return;
            }

            const reader = new FileReader();
            
            reader.onload = function(e) {
                const text = e.target.result;
                const rows = text.split('\n');
                let successCount = 0;
                let errorCount = 0;

                for (let i = 0; i < rows.length; i++) { // On commence √† 0 (on teste tout)
                    const row = rows[i].trim();
                    if (row) {
                        // On s√©pare par ; ou , ou TABULATION (\t)
                        const cols = row.split(/[,;\t]/);
                        
                        // On retire les vides autour des colonnes
                        const cleanCols = cols.map(c => c.trim()).filter(c => c !== "");

                        if (cleanCols.length >= 4) {
                            const priceTest = parseFloat(cleanCols[2].replace(',', '.'));
                            const stockTest = parseInt(cleanCols[3]);

                            // Si la 3√®me colonne n'est pas un nombre, c'est probablement l'en-t√™te (ex: "Prix"), on ignore
                            if (isNaN(priceTest)) {
                                continue;
                            }

                            const newProduct = {
                                id: Date.now() + i,
                                name: cleanCols[0],
                                category: cleanCols[1],
                                price: priceTest,
                                stock: stockTest,
                                img: ""
                            };

                            if (!isNaN(newProduct.price) && !isNaN(newProduct.stock)) {
                                state.products.push(newProduct);
                                successCount++;
                            } else {
                                errorCount++;
                            }
                        }
                    }
                }

                saveData(); 
                closeModal('import-modal');
                renderInventory();
                
                alert(`Import termin√© !\n${successCount} produits ajout√©s.\n${errorCount} lignes ignor√©es.`);
            };

            reader.readAsText(file);
        }       

 // --- HISTORY & INVOICE ---
        function renderHistory() {
            const list = document.getElementById('history-list');
            if(state.sales.length === 0) { list.innerHTML = "<p>Aucune vente.</p>"; return; }
            
            list.innerHTML = state.sales.map(s => `
                <div style="background:white; padding:15px; margin-bottom:10px; border-radius:8px; display:flex; justify-content:space-between; align-items:center;">
                    <div>
                        <strong>Client: ${s.client.name}</strong><br>
                        <small>${s.date} ‚Ä¢ #${s.id.toString().slice(-6)}</small>
                    </div>
                    <div style="text-align:right">
                        <div style="font-weight:bold; color:var(--primary-color)">${s.total.toFixed(2)} ${state.settings.currency}</div>
                        <button class="btn-sm btn-edit" onclick="viewInvoice(${s.id})">üìÑ Voir Facture</button>
                    </div>
                </div>
            `).join('');
        }

        function viewInvoice(saleId) {
            const sale = state.sales.find(s => s.id === saleId);
            if(!sale) return;

            const s = state.settings;
            const totalHT = sale.items.reduce((sum, item) => sum + (item.priceHt * item.qty), 0);
            const taxAmount = sale.total - totalHT;

            const content = document.getElementById('invoice-content');
            content.innerHTML = `
                <div class="invoice-box">
                    <table cellpadding="0" cellspacing="0">
                        <tr class="top">
                            <td colspan="2">
                                <table>
                                    <tr>
                                        <td class="title">
                                            <h1>${s.name}</h1>
                                        </td>
                                        <td>
                                            Facture #: ${sale.id}<br>
                                            Date: ${sale.date}
                                        </td>
                                    </tr>
                                </table>
                            </td>
                        </tr>
                        <tr class="information">
                            <td colspan="2">
                                <table>
                                    <tr>
                                        <td>
                                            <strong>Factur√© √† :</strong><br>
                                            ${sale.client.name}<br>
                                            ${sale.client.address.replace(/\n/g, '<br>')}
                                        </td>
                                        <td>
                                            <strong>De :</strong><br>
                                            ${s.name}<br>
                                            ${s.address}<br>
                                            ${s.city}<br>
                                            SIRET: ${s.siret}
                                        </td>
                                    </tr>
                                </table>
                            </td>
                        </tr>
                        <tr class="heading">
                            <td>Article</td>
                            <td>Prix</td>
                        </tr>
                        ${sale.items.map(item => `
                        <tr class="item">
                            <td>${item.name}<br><small>x ${item.qty}</small></td>
                            <td>${(item.priceTTC * item.qty).toFixed(2)} ${s.currency}</td>
                        </tr>`).join('')}
                        <tr class="total">
                            <td></td>
                            <td>Total: ${sale.total.toFixed(2)} ${s.currency}</td>
                        </tr>
                    </table>
                    <div style="margin-top:30px; font-size:12px; color:#777;">
                        Dont TVA (${s.tax}%): ${taxAmount.toFixed(2)} ${s.currency}<br>
                        Mode de paiement : Esp√®ces / Carte / Ch√®que<br>
                        Merci de votre confiance.
                    </div>
                </div>
            `;
            document.getElementById('invoice-modal').classList.add('open');
        }

        function closeModal(id) { document.getElementById(id).classList.remove('open'); }

        init();
    </script>
